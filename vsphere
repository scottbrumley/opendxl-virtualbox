Vagrant.configure("2") do |config|
  config.vm.box = "vsphere"
  config.vm.box_url = "https://cloud-images.ubuntu.com/xenial/20170512/xenial-server-cloudimg-amd64-vagrant.box"
  config.vm.synced_folder "./", "/vagrant"
  config.vm.provision "shell", path: "scripts/bootstrap.sh"

  config.vm.provider :vsphere do |vsphere|
    vsphere.host = "#{ENV['VSPHERE_HOST']}"
    vsphere.compute_resource_name = "#{ENV['VSPHERE_COMPUTE_RESOURCE_NAME']}"
    #vsphere.resource_pool_name = "#{ENV['VSPHERE_RESOURCE_POOL_NAME']}"
    #vsphere.template_name = "#{ENV['VSPHERE_TEMPLATE_NAME']}"
    vsphere.name = "#{ENV['VSPHERE_NAME']}"
    vsphere.user = "#{ENV['VSPHERE_USER']}"
    vsphere.password = "#{ENV['VSPHERE_PASSWORD']}"
    vsphere.insecure = true
  end
end